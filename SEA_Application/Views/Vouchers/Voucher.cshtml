                    }
                    else {
                        Credit = item.Amount;
                    }
                    table.fnAddData([item.VoucherNo, item.Name, item.LedgerName, item.Notes, ab, numberWithCommas(Debit), numberWithCommas(Credit)]);
                })
            }
